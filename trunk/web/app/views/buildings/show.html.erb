<% html_top_items << capture do %>
	<%= stylesheet_link_tag javascript_path('jquery_pagination/lib/jquery_pagination/pagination.css'), 'buildings' %>
<% end %>
<% html_bottom_items << capture do %>
	<%= javascript_include_tag 'get_rest.jquery.js', 'jquery_pagination/lib/jquery_pagination/jquery.pagination.js', 'buildings' %>
<% end %>

<div id="search">

	<div class="yui-gb">
		<% form_tag do %>
			<div class="yui-u first">
				<%= label :q, 'search' %>: <%= text_field_tag :q %>
			</div>
			<div class="yui-u">
				<%= label :username, 'user' %><%= text_field_tag :username %>
			</div>
			<div class="yui-u">
				<%= submit_tag 'find' %>
			</div>
		<% end %>
	</div>
</div>

<div class="yui-g">
	<div class="yui-u first">
		<div>
			<div id="Pagination" class="pagination"></div>
			<div id="loadIndicator"><%= image_tag 'ajax-loader.gif' %></div>
			<br style="clear:both;"/>
		</div>
		<div class="container" id="responseContainer"></div>
	</div>
	<div class="yui-u">
		<div id="photoBucket"></div>
	</div>
</div>