<%= f.error_messages %>

<%= f.hidden_field :user_id, :value=>current_user.id %>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :name %></div>
  <div class="yui-u"><%= f.text_field :name %></div>
</div>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :city %></div>
  <div class="yui-u"><%= f.text_field :city %></div>
</div>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :state %></div>
  <div class="yui-u"><%= f.text_field :state %></div>
</div>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :country %></div>
  <div class="yui-u"><%= f.text_field :country %></div>
</div>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :lat, 'Latitude' %></div>
  <div class="yui-u"><%= f.text_field :lat %></div>
</div>

<div class="row yui-gd">
  <div class="yui-u first"><%= f.label :lon, 'Longitude' %></div>
  <div class="yui-u"><%= f.text_field :lon %></div>
</div>

<% f.fields_for :notes do |notesf| %>
  <%= notesf.hidden_field :user_id, :value=>current_user.id %>
  <div class="row yui-gd">
    <div class="yui-u first"><%= notesf.label :notes %></div>
    <div class="yui-u"><%= notesf.text_area :notes %></div>
  </div>
<% end %>