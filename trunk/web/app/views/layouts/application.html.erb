<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  
  <head>
  	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  	<title><%= h @document_title %></title>
  	<%= stylesheet_link_tag 'yui-grids', 'yui-base', 'app' %>
  	<%= javascript_include_tag 'jquery', 'app' %>
  </head>
  
  <body>
    
    <div id="doc4" class="yui-t1">
      <div id="hd" role="banner">
        <div class="yui-g">
          <div class="yui-u first">
            <%= link_to 'My Vernacular', root_path %>
          </div>
          <div class="yui-u">
            <%= link_to "My Profile", account_path %>
          </div>
        </div>
      </div>
        <div id="bd" role="main">
          <div id="yui-main">
            <div class="yui-b"><div class="yui-g">
              <%= yield %>
            </div>
          </div>
        </div>
        <div id="mainNav" class="yui-b">
          <ul>
            <li>NAVIGATION</li>
          </ul>
        </div>
      </div>
      <div id="ft" role="contentinfo">
        Copyright &#169; 2009 XYZ
      </div>
    </div>
    
  </body>
  
</html>